<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SurfaceView
        android:id="@+id/sv_video"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_video_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="播放视频"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_video" />

    <Button
        android:id="@+id/btn_video_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="停止视频"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_video_play"
        app:layout_constraintLeft_toRightOf="@id/btn_video_play" />
</androidx.constraintlayout.widget.ConstraintLayout>